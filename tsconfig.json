{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "./build/",
    "sourceMap": true,
    "target": "esnext"
  },
  "include": ["./src/**/*"],
  "exclude": [
    "acceptance-tests",
    "build",
    "jest",
    "node_modules",
    "scripts",
    "storybook",
    "webpack",
    "src/setupTests.ts"
  ]
}
